<script>
function showDashboard() {
  document.getElementById("content").innerHTML =
  `<div class="card">
      <h2>Operations Dashboard</h2>
      <p><b>Orders This Hour:</b> 428</p>
      <p><b>Waste Risk Index:</b> 62 (High)</p>
    </div>`;
}

function showAlerts() {
  document.getElementById("content").innerHTML =
  `<div class="card">
      <h2>Kitchen Alerts</h2>
      <ul>
        <li>PREP: Stage 20 chicken portions now</li>
        <li>HOLD: Stop prepping lettuce (overstock risk)</li>
        <li>DELAY: Reduce fries batch size</li>
      </ul>
      <button onclick="showAlerts()">Regenerate Alerts</button>
    </div>`;
}

function showROI() {
  document.getElementById("content").innerHTML =
  `<div class="card">
      <h2>Business Impact</h2>
      <p>40 stores</p>
      <p>$450,000 per store annual perishables</p>
      <p>8% waste rate</p>
      <p>25% waste reduction</p>
      <h3>Projected Annual Savings: $360,000</h3>
      <h3>ROI: 3.75x</h3>
    </div>`;
}

showDashboard();
</script>

